<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="bitbag_sylius_elasticsearch_plugin.property_name_resolver.name" class="BitBag\SyliusElasticsearchPlugin\PropertyNameResolver\ConcatedNameResolver">
            <argument>%bitbag_es_shop_name_property_prefix%</argument>
        </service>

        <service id="bitbag_sylius_elasticsearch_plugin.property_name_resolver.option" class="BitBag\SyliusElasticsearchPlugin\PropertyNameResolver\ConcatedNameResolver">
            <argument>%bitbag_es_shop_option_property_prefix%</argument>
        </service>

        <service id="bitbag_sylius_elasticsearch_plugin.property_name_resolver.attribute" class="BitBag\SyliusElasticsearchPlugin\PropertyNameResolver\ConcatedNameResolver">
            <argument>%bitbag_es_shop_attribute_property_prefix%</argument>
        </service>

        <service id="bitbag_sylius_elasticsearch_plugin.property_name_resolver.channel_pricing" class="BitBag\SyliusElasticsearchPlugin\PropertyNameResolver\ConcatedNameResolver">
            <argument>%bitbag_es_shop_product_price_property_prefix%</argument>
        </service>

        <service id="bitbag_sylius_elasticsearch_plugin.property_name_resolver.price" class="BitBag\SyliusElasticsearchPlugin\PropertyNameResolver\PriceNameResolver">
            <argument>%bitbag_es_shop_product_price_property_prefix%</argument>
        </service>

        <service id="bitbag_sylius_elasticsearch_plugin.property_name_resolver.description" class="BitBag\SyliusElasticsearchPlugin\PropertyNameResolver\ConcatedNameResolver">
            <argument>%bitbag_es_shop_description_property_prefix%</argument>
        </service>

        <service id="bitbag_sylius_elasticsearch_plugin.property_name_resolver.short_description" class="BitBag\SyliusElasticsearchPlugin\PropertyNameResolver\ConcatedNameResolver">
            <argument>%bitbag_es_shop_short_description_property_prefix%</argument>
        </service>

        <service id="bitbag_sylius_elasticsearch_plugin.search_property_name_resolver_registry" class="BitBag\SyliusElasticsearchPlugin\PropertyNameResolver\SearchPropertyNameResolverRegistry">
            <call method="addPropertyNameResolver">
                <argument type="service" id="bitbag_sylius_elasticsearch_plugin.property_name_resolver.name" />
            </call>
            <call method="addPropertyNameResolver">
                <argument type="service" id="bitbag_sylius_elasticsearch_plugin.property_name_resolver.short_description" />
            </call>
            <call method="addPropertyNameResolver">
                <argument type="service" id="bitbag_sylius_elasticsearch_plugin.property_name_resolver.description" />
            </call>
        </service>
      
        <service id="BitBag\SyliusElasticsearchPlugin\PropertyNameResolver\SearchPropertyNameResolverRegistryInterface" alias="bitbag_sylius_elasticsearch_plugin.search_property_name_resolver_registry" />

        <service id="bitbag_sylius_elasticsearch_plugin.property_name_resolver.taxon_position" class="BitBag\SyliusElasticsearchPlugin\PropertyNameResolver\ConcatedNameResolver">
            <argument>%bitbag_es_shop_taxon_position_property_prefix%</argument>
        </service>
    </services>
</container>
